local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")

local Library = {
    AccentColor = Color3.fromRGB(0, 170, 255), -- The "brand" color
    Font = Enum.Font.GothamSemibold
}

-- UTILITIES
local function Tween(obj, time, goal)
    TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Sine), goal):Play()
end

local function MakeDraggable(topbar, object)
    local dragging, dragInput, dragStart, startPos
    topbar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = object.Position
        end
    end)
    topbar.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            object.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

function Library:Init(hubName)
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "ImprovedLib"
    ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")
    ScreenGui.ResetOnSpawn = false

    local Main = Instance.new("Frame")
    Main.Name = "Main"
    Main.Size = UDim2.new(0, 550, 0, 380)
    Main.Position = UDim2.new(0.5, -275, 0.5, -190)
    Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    Main.BorderSizePixel = 0
    Main.Parent = ScreenGui

    -- Add a subtle border to the whole menu
    local MainStroke = Instance.new("UIStroke")
    MainStroke.Thickness = 2
    MainStroke.Color = Color3.fromRGB(40, 40, 40)
    MainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    MainStroke.Parent = Main

    local MainCorner = Instance.new("UICorner")
    MainCorner.CornerRadius = UDim.new(0, 12)
    MainCorner.Parent = Main

    -- TopBar
    local TopBar = Instance.new("Frame")
    TopBar.Size = UDim2.new(1, 0, 0, 50)
    TopBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    TopBar.BorderSizePixel = 0
    TopBar.Parent = Main
    
    local TopCorner = Instance.new("UICorner")
    TopCorner.CornerRadius = UDim.new(0, 12)
    TopCorner.Parent = TopBar

    local Title = Instance.new("TextLabel")
    Title.Text = hubName:upper()
    Title.Size = UDim2.new(1, -20, 1, 0)
    Title.Position = UDim2.new(0, 20, 0, 0)
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1
    Title.Font = Library.Font
    Title.TextSize = 20
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = TopBar

    -- Accent Line under TopBar
    local AccentLine = Instance.new("Frame")
    AccentLine.Size = UDim2.new(1, 0, 0, 2)
    AccentLine.Position = UDim2.new(0, 0, 1, -2)
    AccentLine.BackgroundColor3 = Library.AccentColor
    AccentLine.BorderSizePixel = 0
    AccentLine.Parent = TopBar

    -- Content
    local Sidebar = Instance.new("ScrollingFrame")
    Sidebar.Size = UDim2.new(0, 150, 1, -60)
    Sidebar.Position = UDim2.new(0, 10, 0, 60)
    Sidebar.BackgroundTransparency = 1
    Sidebar.ScrollBarThickness = 0
    Sidebar.Parent = Main

    local SidebarList = Instance.new("UIListLayout")
    SidebarList.Parent = Sidebar
    SidebarList.Padding = UDim.new(0, 8)

    local PageContainer = Instance.new("Frame")
    PageContainer.Size = UDim2.new(1, -180, 1, -70)
    PageContainer.Position = UDim2.new(0, 170, 0, 60)
    PageContainer.BackgroundTransparency = 1
    PageContainer.Parent = Main

    MakeDraggable(TopBar, Main)

    local Tabs = {}
    local first = true

    function Tabs:CreateTab(tabName)
        local Page = Instance.new("ScrollingFrame")
        Page.Size = UDim2.new(1, 0, 1, 0)
        Page.BackgroundTransparency = 1
        Page.Visible = first
        Page.ScrollBarThickness = 2
        Page.Parent = PageContainer

        local PageList = Instance.new("UIListLayout")
        PageList.Parent = Page
        PageList.Padding = UDim.new(0, 10)

        local TabBtn = Instance.new("TextButton")
        TabBtn.Size = UDim2.new(1, -5, 0, 35)
        TabBtn.BackgroundColor3 = first and Library.AccentColor or Color3.fromRGB(25, 25, 25)
        TabBtn.Text = tabName
        TabBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabBtn.Font = Library.Font
        TabBtn.Parent = Sidebar

        Instance.new("UICorner", TabBtn).CornerRadius = UDim.new(0, 6)

        TabBtn.MouseButton1Click:Connect(function()
            for _, p in pairs(PageContainer:GetChildren()) do if p:IsA("ScrollingFrame") then p.Visible = false end end
            for _, b in pairs(Sidebar:GetChildren()) do 
                if b:IsA("TextButton") then Tween(b, 0.3, {BackgroundColor3 = Color3.fromRGB(25, 25, 25)}) end 
            end
            Page.Visible = true
            Tween(TabBtn, 0.3, {BackgroundColor3 = Library.AccentColor})
        end)

        first = false
        local Elements = {}

        function Elements:CreateButton(text, callback)
            local Button = Instance.new("TextButton")
            Button.Size = UDim2.new(1, -15, 0, 40)
            Button.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            Button.Text = "  " .. text -- Simple padding
            Button.TextColor3 = Color3.fromRGB(200, 200, 200)
            Button.Font = Library.Font
            Button.TextXAlignment = Enum.TextXAlignment.Left
            Button.Parent = Page

            local BtnStroke = Instance.new("UIStroke")
            BtnStroke.Color = Color3.fromRGB(50, 50, 50)
            BtnStroke.Thickness = 1
            BtnStroke.Parent = Button

            Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 6)

            Button.MouseEnter:Connect(function()
                Tween(Button, 0.2, {BackgroundColor3 = Color3.fromRGB(40, 40, 40), TextColor3 = Color3.fromRGB(255, 255, 255)})
                Tween(BtnStroke, 0.2, {Color = Library.AccentColor})
            end)
            Button.MouseLeave:Connect(function()
                Tween(Button, 0.2, {BackgroundColor3 = Color3.fromRGB(30, 30, 30), TextColor3 = Color3.fromRGB(200, 200, 200)})
                Tween(BtnStroke, 0.2, {Color = Color3.fromRGB(50, 50, 50)})
            end)

            Button.MouseButton1Click:Connect(callback)
        end

        return Elements
    end

    return Tabs
end

return Library
